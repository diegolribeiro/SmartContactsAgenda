<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.fiap.smartcontactsagenda">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_contacts_24px"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.about.AboutActivity"></activity>
        <activity android:name=".view.contact.ListContactActivity" />
        <activity android:name=".view.contact.EditcContactActivity" />
        <activity android:name=".view.contact.SaveContactActivity" />
        <activity android:name=".view.main.MainActivity" />
        <activity android:name=".view.signup.SignUpActivity" />
        <activity android:name=".view.login.LoginActivity" />
        <activity android:name=".view.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>